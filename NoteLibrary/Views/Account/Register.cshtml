                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Üniversite</label>
                        <input id="University" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Bölüm</label>
                        <input id="Department" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">E-mail</label>
                        <input id="Email" class="form-control" />

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Şifre</label>
                        <input id="Password" type="password" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Şifre Tekrar</label>
                        <input id="ConfirmPassword" type="password" class="form-control" />
                    </div>
                </div>
                <div class="col-md-12">
                    <input type="button" id="Submit" value="Kaydol" style="background-color:#181818; color:#f5f5f5; width:100%;" class="btn btn-default" />
                </div>

            </div>
        </div>
    </div>
    <script src="~/package/dist/sweetalert2.js"></script>
    <script>
        var Submit = document.getElementById('Submit');
        Submit.addEventListener('click', function () {
            var password = document.getElementById('Password').value;
            var confirmpassword = document.getElementById('ConfirmPassword').value;
            var name = document.getElementById('Name').value;
            var surname = document.getElementById('Surname').value;
            var city = document.getElementById('City').value;
            var university = document.getElementById('University').value;
            var department = document.getElementById('Department').value;
            var email = document.getElementById('Email').value;

            function validateEmail(email) {
            var re = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(email);
            }

            if (validateEmail(email) && password.length > 5) {

                $.ajax({
                    type: "POST",
                    url: "/Account/Register",
                    data: {
                        Password: password,
                        ConfirmPassword: confirmpassword,
                        Name: name,
                        Surname: surname,
                        City: city,
                        Department: department,
                        Email: email,
                        University: university
                    },
                    success: function (returndata) {
                        if (returndata.ok) {

                            Swal({
                                title: 'Teşekkürler !',
                                type: 'success',
                                html:
                                    '<p>Kayıt işlemi başarı ile gerçekleşti!</p>'
                            }).then(function () {
                                window.location.href = returndata.newurl;
                            });
                        }

                        else {
                            Swal({
                                type: 'error',
                                title: 'Oops...',
                                text: 'Alanlar boş geçilemez veya girilen şifre tekrar girilen şifre ile aynı olmalı!'
                            })
                        }


                    }
                });
                
            } else {
                Swal({
                    type: 'error',
                    title: 'Oops...',
                    text: 'E-mail doğru formatta giriniz ve şifre 6 haneli olmalı!'
                })
                
            }
       
        });

    </script>


