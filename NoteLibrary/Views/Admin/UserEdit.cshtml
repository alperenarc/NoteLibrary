                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="State" /> @Html.DisplayNameFor(model => model.State)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="HomePage">Back to List</a>
    </div>

</div>