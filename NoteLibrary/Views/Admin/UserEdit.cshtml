@model NoteLibrary.Models.Entities.User

@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2>UserEdit</h2>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UserEdit">
